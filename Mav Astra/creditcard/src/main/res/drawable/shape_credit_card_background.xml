<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />

            <!--<solid android:color="#22000000" />-->
         <gradient
                android:angle="270"
                android:centerX="0"
                android:centerY="0"
                android:startColor="#00000000"
                android:endColor="#2D000000"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners android:radius="10dp" />
            <solid android:color="@color/md_grey_300" />
            <gradient
                android:angle="135"
                android:centerX="0.6"
                android:centerY="0.1"
                android:startColor="#666"
                android:centerColor="#EEE"
                android:endColor="#666"
                android:type="linear" />

        </shape>
    </item>
</layer-list>
