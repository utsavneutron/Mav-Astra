<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".insideToday">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Tasks"
            android:fontFamily="@font/googlesans_bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_margin="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:id="@+id/insideTodaymainTile1"
            app:cardBackgroundColor="#212F3D"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130sp"
                    android:layout_height="150sp"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:src="@drawable/leetcode"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text= "Solve 2 Dynamic Programming problems.
                    1:00-1:45 PM"
                    android:padding="5sp"

                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/googlesans_regular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:id="@+id/insideTodaymainTile2"
            app:cardBackgroundColor="#CC0066"
            android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="130sp"
                        android:layout_height="160sp"
                        android:padding="5sp"
                        android:layout_gravity="center"
                        android:src="@drawable/khalili"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text= "3310's Presentation with Dr. Khalili.
                         2:00-3:20 PM
                         Team: 14"
                        android:padding="5sp"

                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/googlesans_regular"
                        />
                </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="5dp"
        android:clickable="true"
        android:id="@+id/insideTodaymainTile3"
        app:cardBackgroundColor="#00447c"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130sp"
                android:layout_height="150sp"
                android:padding="5sp"
                android:layout_gravity="center"
                android:src="@drawable/healthcenter"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text= "Collect COVID-19 Test report from UTA Health Center.
                    4:00-4:30 PM"
                android:padding="5sp"

                android:textSize="25sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/googlesans_regular"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:id="@+id/insideTodaymainTile4"
            app:cardBackgroundColor="#6A6669"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130sp"
                    android:layout_height="150sp"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:src="@drawable/bakker"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text= "CSE-3320's FAT-32 Assignment due tonight."
                    android:padding="5sp"

                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/googlesans_regular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:id="@+id/insideTodaymainTile5"
            app:cardBackgroundColor="#923D7E"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130sp"
                    android:layout_height="150sp"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:src="@drawable/kchall"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text= "Arlington Hall's Rent due.
                                    Tap to pay."
                    android:padding="1sp"

                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/googlesans_regular"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>