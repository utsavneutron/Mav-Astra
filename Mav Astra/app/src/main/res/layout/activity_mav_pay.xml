<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".insideToday">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_here"
            android:fontFamily="@font/googlesans_bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_margin="20dp"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            android:clickable="true"
            android:id="@+id/insideTodaymainTile2"
            app:cardBackgroundColor="#CC0066"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:text="Visa Gold"
                    android:textColor="@color/gray"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-300dp"
                    android:layout_marginTop="95dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:text="4829  2329  9042  2891"
                    android:textColor="@color/gray"
                    android:textSize="25sp" />

                <TextView

                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-300dp"
                    android:layout_marginTop="125dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:text="                                        12/23"
                    android:textColor="@color/gray"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-300dp"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:text="RACHIT AGARWAL"
                    android:textColor="@color/gray"
                    android:textSize="25sp" />
                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="80sp"
                    android:layout_gravity="bottom"
                    android:padding="5sp"
                    android:src="@drawable/ic_visa" />
                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="80sp"
                    android:layout_marginLeft="-380dp"
                    android:layout_marginBottom="100dp"
                    android:layout_gravity="bottom"
                    android:padding="5sp"
                    android:src="@drawable/nfc" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            app:cardCornerRadius="35dp"


            <com.zaferayan.creditcard.view.CreditCardView
                android:id="@+id/ccView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">



            </com.zaferayan.creditcard.view.CreditCardView>
            <Button
                android:id="@+id/myBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/md_white_1000"
                android:text="Add your credit card."/>



        </LinearLayout>

    </LinearLayout>
</ScrollView>